version: '3.8'

services:
  {{.ProjectName | snake_case}}:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
    environment:
      - PORT=8080
      - SESSION_SECRET=${SESSION_SECRET:-change-this-secret-key}
      - CSRF_KEY=${CSRF_KEY:-32-byte-long-auth-key}
    env_file:
      - .env
    volumes:
      # Mount templates and static assets for development
      - ./templates:/templates:ro
      - ./static:/static:ro
    depends_on:
      - redis
    networks:
      - {{.ProjectName | snake_case}}_network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8080/api/v1/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks:
      - {{.ProjectName | snake_case}}_network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3
    command: redis-server --appendonly yes

  # Optional: Nginx reverse proxy for production
  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./static:/usr/share/nginx/html/static:ro
      - nginx_logs:/var/log/nginx
    depends_on:
      - {{.ProjectName | snake_case}}
    networks:
      - {{.ProjectName | snake_case}}_network
    restart: unless-stopped
    profiles:
      - production

  # Optional: Database for data persistence
  postgres:
    image: postgres:15-alpine
    environment:
      POSTGRES_DB: {{.ProjectName | snake_case}}_db
      POSTGRES_USER: {{.ProjectName | snake_case}}_user
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-{{.ProjectName | snake_case}}_password}
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./scripts/init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    networks:
      - {{.ProjectName | snake_case}}_network
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{.ProjectName | snake_case}}_user -d {{.ProjectName | snake_case}}_db"]
      interval: 30s
      timeout: 10s
      retries: 5
    profiles:
      - database

  # Optional: Database migration service
  migrate:
    build:
      context: .
      dockerfile: Dockerfile
    command: ["/main", "--migrate"]
    depends_on:
      postgres:
        condition: service_healthy
    environment:
      - DATABASE_URL=postgres://{{.ProjectName | snake_case}}_user:${POSTGRES_PASSWORD:-{{.ProjectName | snake_case}}_password}@postgres:5432/{{.ProjectName | snake_case}}_db?sslmode=disable
    env_file:
      - .env
    networks:
      - {{.ProjectName | snake_case}}_network
    restart: "no"
    profiles:
      - database

  # Development: Hot reload service
  dev:
    build:
      context: .
      dockerfile: Dockerfile.dev
    ports:
      - "8080:8080"
    environment:
      - PORT=8080
      - GIN_MODE=debug
    env_file:
      - .env
    volumes:
      - .:/app
      - go_cache:/go/pkg/mod
    depends_on:
      - redis
    networks:
      - {{.ProjectName | snake_case}}_network
    restart: unless-stopped
    profiles:
      - development

volumes:
  redis_data:
    driver: local
  postgres_data:
    driver: local
  nginx_logs:
    driver: local
  go_cache:
    driver: local

networks:
  {{.ProjectName | snake_case}}_network:
    driver: bridge