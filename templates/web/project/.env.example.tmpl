# {{.ProjectName}} Environment Configuration

# Server Configuration
PORT=8080
HOST=localhost
GIN_MODE=debug

# Session Configuration
SESSION_SECRET=change-this-secret-key-in-production
SESSION_MAX_AGE=604800
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# CSRF Protection
CSRF_KEY=32-byte-long-auth-key-change-this
CSRF_SECURE=false

# Database Configuration (if using database)
DATABASE_URL=postgres://{{.ProjectName | snake_case}}_user:{{.ProjectName | snake_case}}_password@localhost:5432/{{.ProjectName | snake_case}}_db?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME={{.ProjectName | snake_case}}_db
DB_USER={{.ProjectName | snake_case}}_user
DB_PASSWORD={{.ProjectName | snake_case}}_password
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration (for sessions/cache)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-Token

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# File Upload Configuration
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=./static/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt,doc,docx

# Email Configuration (if using email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL={{.ProjectName | snake_case}}@example.com
FROM_NAME={{.ProjectName}}

# External APIs
# API_KEY=your-api-key-here
# THIRD_PARTY_URL=https://api.example.com

# Monitoring & Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security
BCRYPT_COST=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# Cache Configuration
CACHE_TTL=1h
CACHE_CLEANUP_INTERVAL=10m

# Template Configuration
TEMPLATE_CACHE=true
TEMPLATE_DEBUG=false
TEMPLATE_AUTO_RELOAD=true

# Static Assets
STATIC_PATH=./static
STATIC_URL_PREFIX=/static
ASSET_VERSIONING=false

# Development
DEBUG=false
DEVELOPMENT=true
HOT_RELOAD=true

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30s

# TLS Configuration (for HTTPS)
# TLS_CERT_FILE=./certs/server.crt
# TLS_KEY_FILE=./certs/server.key
# TLS_ENABLED=false

# Cookie Configuration
COOKIE_DOMAIN=
COOKIE_PATH=/
COOKIE_SAME_SITE=lax

# Content Security Policy
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self unsafe-inline
CSP_STYLE_SRC=self unsafe-inline
CSP_IMG_SRC=self data: https:
CSP_FONT_SRC=self
CSP_CONNECT_SRC=self

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_PASSWORD_RESET=true
FEATURE_API_ACCESS=true

# Timezone
TIMEZONE=UTC

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Web Application Specific
APP_NAME={{.ProjectName}}
APP_VERSION=1.0.0
APP_URL=http://localhost:8080
CONTACT_EMAIL=contact@{{.ProjectName | snake_case}}.com

# Google Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Social Media Links (optional)
# SOCIAL_TWITTER=https://twitter.com/yourhandle
# SOCIAL_GITHUB=https://github.com/yourusername
# SOCIAL_LINKEDIN=https://linkedin.com/in/yourprofile