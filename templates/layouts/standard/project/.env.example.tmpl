# {{.ProjectName}} Environment Configuration

# Server Configuration
PORT=8080
HOST=localhost
GIN_MODE=debug

# Database Configuration
DATABASE_URL=postgres://{{.ProjectName | snake_case}}_user:{{.ProjectName | snake_case}}_password@localhost:5432/{{.ProjectName | snake_case}}_db?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME={{.ProjectName | snake_case}}_db
DB_USER={{.ProjectName | snake_case}}_user
DB_PASSWORD={{.ProjectName | snake_case}}_password
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# File Upload Configuration
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=./uploads

# Email Configuration (if using email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL={{.ProjectName | snake_case}}@example.com
FROM_NAME={{.ProjectName}}

# External APIs
# API_KEY=your-api-key-here
# THIRD_PARTY_URL=https://api.example.com

# Monitoring & Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security
BCRYPT_COST=12
SESSION_SECRET=your-session-secret-change-this-in-production
CSRF_TOKEN_LENGTH=32

# Cache Configuration
CACHE_TTL=1h
CACHE_CLEANUP_INTERVAL=10m

# Development
DEBUG=false
DEVELOPMENT=true

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30s

# TLS Configuration (for HTTPS)
# TLS_CERT_FILE=./certs/server.crt
# TLS_KEY_FILE=./certs/server.key
# TLS_ENABLED=false

# Timezone
TIMEZONE=UTC